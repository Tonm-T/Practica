@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/templatemo-xtra-blog.css" />

<header class="tm-header" id="tm-header">
    <div class="tm-header-wrapper">
        <div class="tm-site-header">
            <img class="mb-3 mx-auto tm-site-logo" src="~/img/Logo2.gif"></img>
            <h1 class="text-center">PRACTICA</h1>
        </div>
        <nav class="tm-nav" id="tm-nav">
            <ul>
                <li class="tm-nav-item active">
                    <a href="~/Home/Index" class="tm-nav-link">
                        <i class="fas fa-home"></i>
                        HOME
                    </a>
                </li>
                <li class="tm-nav-item">
                    <a href="~/Rols/Index" class="tm-nav-link">
                        <i class="fas fa-pen"></i>
                        ROLES
                    </a>
                </li>
                <li class="tm-nav-item">
                    <a href="~/Usuarios/Index" class="tm-nav-link">
                        <i class="fas fa-users"></i>
                        USUARIOS
                    </a>
                </li>
            </ul>
        </nav>
   </div> 
</header>
<div class="container-fluid">
    <main class="tm-main">
        <div class="row tm-row">
            <article class="col-12 col-md-6 tm-post">
                <hr class="tm-hr-primary">
                <a href="~/Rols/Index" class="effect-lily tm-post-link tm-pt-20">
                    <div class="tm-post-link-inner">
                        <img src="img/CrearRol.jpg" alt="Image" class="img-fluid">
                    </div>
                </a>
                <p class="tm-pt-30">
                    !Aqui Puedes Crear Tu Rol¡
                    <br>
                </p>
                <hr>
            </article>
            <article class="col-12 col-md-6 tm-post">
                <hr class="tm-hr-primary">
                <a href="~/Usuarios/Index" class="effect-lily tm-post-link tm-pt-20">
                    <div class="tm-post-link-inner">
                        <img src="img/CrearUsuario.jpg" alt="Image" class="img-fluid">
                    </div>
                </a>
                <p class="tm-pt-30">
                   !Aqui Puedes Crear Tu Usuario¡
                </p>
                <hr>
            </article>
        </div>
        <div class="row tm-row tm-mt-100 tm-mb-75">
            <div class="tm-paging-wrapper">
                <span class="d-inline-block mr-3"></span>
                <nav class="tm-paging-nav d-inline-block">
                    <ul>
                        <li class="tm-paging-item active">
                            <a href="#" class="mb-2 tm-btn tm-paging-link">↥</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </main>
</div>
<footer class="row tm-row">
    <hr class="col-12">
</footer>
